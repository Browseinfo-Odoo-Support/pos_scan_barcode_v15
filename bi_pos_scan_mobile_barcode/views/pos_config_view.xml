<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit" model="ir.ui.view">
            <field name="name">pos.config.view.form.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='posbox_reference']" position="after">
                    <h2>Barcode/QR Scanner </h2>
                    <div class="row mt16 o_settings_container" id="qrcode_bqrcode_scanner">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="pos_scan_mobile_type"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="pos_scan_mobile_type"/>
                            </div>
                            
                        </div>
                    
                       <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="continue_scan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="continue_scan"/>
                            </div>
                        </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_success"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_success"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_success_sound"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_success_sound"/>
                            </div>
                       </div> 
                       
                       <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_faild"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_faild"/>
                            </div>
                        </div>
                          <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_faild_sound"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_faild_sound"/>
                            </div>
                       </div> 
    
                    </div>

                </xpath>
            </field>
        </record>
    </data>

</odoo>